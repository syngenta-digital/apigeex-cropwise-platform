<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ProxyEndpoint name="default">
    <Description>Default proxy endpoint for Cropwise Unified Platform</Description>
    <PreFlow name="PreFlow">
        <Request>
            <!-- JWT Processing with timing -->
            <Step>
                <Name>AM-Timestamp-JWT-Start</Name>
                <Condition>request.header.X-Debug-Performance = "true"</Condition>
            </Step>
            <Step>
                <Name>EV-Extract-JWT-Token</Name>
            </Step>
            <Step>
                <Name>JS-Parse-JWT-Token</Name>
                <Condition>(jwt.token != null)</Condition>
            </Step>
            <Step>
                <Name>AM-Timestamp-JWT-End</Name>
                <Condition>request.header.X-Debug-Performance = "true"</Condition>
            </Step>
            <!-- Default rate limit -->
            <Step>
                <Name>AM-Set-Default-Rate-Limit</Name>
                <Condition>(jwt.valid = true) and (user.rate.limit.type = null)</Condition>
            </Step>
            <!-- KVM Lookup with timing -->
            <Step>
                <Name>AM-Timestamp-KVM-Start</Name>
                <Condition>request.header.X-Debug-Performance = "true"</Condition>
            </Step>
            <Step>
                <Name>KVM-Get-User-Rate-Limit</Name>
                <Condition>(jwt.valid = true) and (jwt.username != null)</Condition>
            </Step>
            <Step>
                <Name>AM-Timestamp-KVM-End</Name>
                <Condition>request.header.X-Debug-Performance = "true"</Condition>
            </Step>
            <!-- Rate Limiting with timing -->
            <Step>
                <Name>AM-Timestamp-RateLimit-Start</Name>
                <Condition>request.header.X-Debug-Performance = "true"</Condition>
            </Step>
            <Step>
                <Name>AM-Set-Rate-Limit-Headers</Name>
                <Condition>(jwt.valid = true) and (jwt.username != null) and (jwt.client_id != null)</Condition>
            </Step>
            <Step>
                <Name>AM-Set-Low-Rate-Header</Name>
                <Condition>(jwt.valid = true) and ((user.rate.limit.type = "low-rate") or (user.rate.limit.type = "readonly-low-rate"))</Condition>
            </Step>
            <Step>
                <Name>AM-Set-Medium-Rate-Header</Name>
                <Condition>(jwt.valid = true) and ((user.rate.limit.type = "medium-rate") or (user.rate.limit.type = "readonly-medium-rate"))</Condition>
            </Step>
            <Step>
                <Name>AM-Set-High-Rate-Header</Name>
                <Condition>(jwt.valid = true) and ((user.rate.limit.type = "high-rate") or (user.rate.limit.type = "readonly-high-rate"))</Condition>
            </Step>
            <Step>
                <Name>AM-Timestamp-RateLimit-End</Name>
                <Condition>request.header.X-Debug-Performance = "true"</Condition>
            </Step>
        </Request>
        <Response/>
    </PreFlow>
    <PostFlow name="PostFlow">
        <Request/>
        <Response>
            <Step>
                <Name>AM-Add-Performance-Headers</Name>
                <Condition>(request.header.X-Debug-Performance != null) and (request.header.X-Debug-Performance = "true")</Condition>
            </Step>
            <Step>
                <Name>FC-Syng-Logging</Name>
            </Step>
        </Response>
    </PostFlow>
    <Flows>
        <Flow name="health-check">
            <Description>Health check endpoint</Description>
            <Request/>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/health") and (request.verb = "GET")</Condition>
        </Flow>
        <Flow name="remote-sensing">
            <Description>Remote sensing API rewrite</Description>
            <Request>
                <Step>
                    <Name>AM-Rewrite-Remote-Sensing-URI</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/remote-sensing/**")</Condition>
        </Flow>
        <Flow name="protector-alerts">
            <Description>Protector alerts special case</Description>
            <Request>
                <Step>
                    <Name>AM-Protector-Alerts-Special-Case</Name>
                    <Condition>jwt.username = "protector.alerts.account@syngenta.com"</Condition>
                </Step>
            </Request>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/v2/accounts/**")</Condition>
        </Flow>
        <Flow name="not-found">
            <Description>Catch-all for undefined routes</Description>
            <Request>
                <Step>
                    <Name>RF-APINotFound</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>true</Condition>
        </Flow>
    </Flows>
    <HTTPProxyConnection>
        <BasePath>/cropwise-unified-platform</BasePath>
        <VirtualHost>default</VirtualHost>
        <VirtualHost>secure</VirtualHost>
    </HTTPProxyConnection>
    <RouteRule name="default">
        <TargetEndpoint>default</TargetEndpoint>
    </RouteRule>
</ProxyEndpoint>
